Bootstrap: docker
From: python:latest


%post

# Update packages
apt-get -y update
apt-get -y upgrade

# Install Python packages
pip install csvkit==2.1.0

# Remove unneeded files
apt-get -y clean
rm -rf /var/lib/apt/lists/*
pip cache purge


%test

python --version
pip list


